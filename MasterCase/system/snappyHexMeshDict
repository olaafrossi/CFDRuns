FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Which of the steps to run
castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    CarBody.stl
    {
        type triSurfaceMesh;
        name CarBody_wall;
    }

    Splitter.stl
    {
        type triSurfaceMesh;
        name Splitter_wall;
    }

    Wing.stl
    {
        type triSurfaceMesh;
        name Wing_wall;
    }

    Upright.stl
    {
        type triSurfaceMesh;
        name Upright_wall;
    }

    RadBody.stl
    {
        type triSurfaceMesh;
        name RadBody_wall;
    }    

    FRTire.stl
    {
        type triSurfaceMesh;
        name FRTire_wall;
    }

    FRPlinth.stl
    {
        type triSurfaceMesh;
        name FRPlinth_wall;
    }

    RRTire.stl
    {
        type triSurfaceMesh;
        name RRTire_wall;
    }

    RRPlinth.stl
    {
        type triSurfaceMesh;
        name RRPlinth_wall;
    }

    FrontPlug.stl
    {
        type triSurfaceMesh;
        name rotatingZoneFront;
    }

    RearPlug.stl
    {
        type triSurfaceMesh;
        name rotatingZoneRear;
    }

    RadSurface.stl
    {
        type triSurfaceMesh;
        name RadSurface_wall;
    }  

    LevelsrefinementBox
    {
        type searchableBox;
        min (-6.0 0.0  0.0);
        max ( 10.0 4.0 4.0);
    }
/*
    heatExchangerBox
    {
